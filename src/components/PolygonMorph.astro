<script>
  const polygon = document.querySelector(".polygon");
  const shapes = [
    "50,15 90,50 70,85 30,85 10,50",
    "50,90 15,70 50,30 85,10 85,50",
    "50,20 15,10 70,85 85,20 85,5",
  ];
  let currentShapeIndex = 0;

  function parsePoints(points) {
    return points.split(" ").map((point) => point.split(",").map(Number));
  }

  function interpolatePoints(startPoints, endPoints, t) {
    return startPoints
      .map((start, i) => {
        const end = endPoints[i];
        const x = start[0] + (end[0] - start[0]) * t;
        const y = start[1] + (end[1] - start[1]) * t;
        return [x, y].join(",");
      })
      .join(" ");
  }

  function morphPolygon() {
    const startPoints = parsePoints(shapes[currentShapeIndex]);
    currentShapeIndex = (currentShapeIndex + 1) % shapes.length;
    const endPoints = parsePoints(shapes[currentShapeIndex]);

    let t = 0;
    function animate() {
      t += 0.02; // Adjust this value to control the speed
      if (t <= 1) {
        polygon.setAttribute(
          "points",
          interpolatePoints(startPoints, endPoints, t)
        );
        requestAnimationFrame(animate);
      } else {
        setTimeout(morphPolygon, 1000); // Pause before starting the next morph
      }
    }

    animate();
  }

  setTimeout(morphPolygon, 1000); // Initial delay before starting the animation
</script>

<svg width="100" height="100" viewBox="0 0 100 100">
  <polygon class="polygon" points="50,15 90,50 70,85 30,85 10,50"></polygon>
</svg>

<style>
