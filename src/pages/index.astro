<style>
  .circle {
    fill: none;
    stroke: #3498db;
    stroke-width: 50;
    stroke-dasharray: 158; /* Half of the circumference */
    stroke-dashoffset: 158; /* Start at 157 to show half circle */
    animation: draw 2s linear forwards;
  }

  @keyframes draw {
    50% {
      stroke-dashoffset: 0;
    }
    100% {
      stroke-dashoffset: -158;
    }
  }
  @keyframes spin {
    0% {
      transform: rotate(180deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .TopCircle {
    transform: rotate(180deg);
    animation: spin 2s linear infinite;
  }
</style>
